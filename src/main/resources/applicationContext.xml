<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="invoiceServiceReference" class="com.udemy.service.InvoiceServicePrefix">
        <property name="invoiceRepository" ref="invoiceRepositoryReference"/>
        <property name="lastNumber" value="112"></property>
        <property name="prefix" value="INV_"></property>
    </bean>
    <bean class="com.udemy.controller.InvoiceControllerDouchette">
        <property name="invoiceService" ref="invoiceServiceReference"/>
    </bean>
    <bean id="invoiceRepositoryReference" class="com.udemy.repository.InvoiceRepositoryDatabase"/>
</beans>